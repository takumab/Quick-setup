<div class="container" id="contact">
	<%= form_tag("/static_pages/thank_you") do %>

		<h1 style="font-family: Oswald, sans-serif;">Contact Us</h1>
		<form>
			<div class="form-group">
				<%= label_tag :name, "Name" %>
				<%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter full name" %>
			</div>
			<div class="form-group">
				<%= label_tag :email, "Email" %>
				<%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter email address" %>
			</div>
			<div class="form-group">
				<%= label_tag :message, "Message" %>
				<%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter message" %>
			</div>
			<%= submit_tag "Submit", class: "btn btn-primary btn-lg btn-block", id: "contact_submit" %>
		</form>
	<% end %>
</div>
	
	


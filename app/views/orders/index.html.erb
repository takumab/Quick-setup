<section>	
	<h1 class="order-page">Orders</h1>
			
			<div ng-controller="OrdersCtrl"> 
				<form class="form-inline" ng-submit="addOrder()">
					<strong>Add order: </strong>
					<input type="number" step="0.01" class="form-control" placholder="Total" ng-model="newOrder.total">
					<select class="form-control" ng-model="newOrder.product_id">
						<!-- option 1 = placeholder -->
						<option value="" disabled selected>Select a product</option>
						<option ng-repeat="product in products" value="{{product.id}}">{{product.name}}</option>
					</select>

					<input type="button"  ng-click="addOrder()" value="+" class="btn btn-success">
				</form>
				<table class="table table-hover">
					<thead>
						<td>Order #</td>
						<td>Total</td>
						<td>Product</td>
						<td></td>
					</thead>
					<tr ng-repeat="order in orders | orderBy:'-id':reverse">
						<td>
							{{order.id}}
						</td>
						<td>
							<strong>{{order.total | currency}}</strong>
						</td>
						<td>
							{{order.product.name}}
							<small ng-show="order.id"><br>-{{order.user.email}}</small>
						</td>
						<td>
							<button ng-click="deleteOrder(order)" class="btn btn-danger btn-sm"> 
								<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
							</button>

						</td>

					</tr>
				</table>
			</div> <!--/end fo ng-controller-->
</section>
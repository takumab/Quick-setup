  <div class="container" id="pro-order" >
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-xs-4 col-md-4" id="product">
          <%= link_to image_tag(product.image_url, class: ["img-responsive", "thumbnail"]), product %> <!-- links to 'Details'/'Show' page -->
          <h4>
            <%= product.name %>
            <% logger.debug "Product: #{product.name}" %>
          </h4>
          
          <p>
            <%= product.image_url %>
          </p>
          <p>
            <%= product.description %>
          </p>
          <p>
            <%= product.colour %>
          </p>
          <p>
            
            $ <%=  product.price %>
          </p>
          
            
            <button type="button" class="btn btn-default">
              <%= link_to content_tag(:i, nil, class: "fa fa-pencil"), edit_product_path(product) %>
            </button>
            <button type="button" class="btn btn-default">
              <%= link_to content_tag(:i, nil, class: "fa fa-trash"), product, method: :delete, data: { confirm: 'Are you sure?' } %> 
            </button>
        </div> <!-- /col-xs-4 -->
      <% end %>
    </div> <!-- /row -->
  </div> <!-- /container -->



<div class="container" id="sign-up">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
   
    
      <form class="main-form" role="form" data-toggle="validator">
        <h2>Sign up</h2>
        <section class="form-group">
          <% f.label :email %><br />
          <%= f.email_field :email, class: "form-control input-md", id: "inputEmail", placeholder: "Email:", autofocus: true, :required => true, dataError: "Invalid emaild address" %>
        </section>
        <div class="help-block with-errors"></div>

        <section class="form-group">
          <% f.label :password %>
          <% if @minimum_password_length %>
          <em><% @minimum_password_length %> </em>
          <% end %>
          <%= f.password_field :password, class: "form-control input-md", placeholder: "Password:", autocomplete: "off", :required => true, dataMinlength: "8" %>
          <span class="help-block">Minimum of 8 characters</span>
        </section>

        <section class="form-group">
          <% f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: "form-control input-md", placeholder: "Confirm password:", autocomplete: "off", :required => true, dataMatchError: "Whoops, these don't match" %>
          <div class="help-block with-errors"></div>
        </section>

        <section class="actions">
          <%= f.submit "Sign up", class: "btn btn-primary btn-lg btn-block", id: "submit" %>
        </section>
      </form>
  <% end %>
</div>

  
  
